<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jboss.hal</groupId>
        <artifactId>hal-parent-with-dependencies</artifactId>
        <version>0.0.3</version>
        <relativePath>../../parent-with-dependencies/pom.xml</relativePath>
    </parent>

    <artifactId>hal-release</artifactId>
    <name>HAL :: Build :: Release</name>
    <description>The final release artifact used as dependency for WildFly / EAP</description>
    <packaging>jar</packaging>

    <properties>
        <gwt.module>org.jboss.hal.app.WildFly</gwt.module>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.jboss.hal</groupId>
            <artifactId>hal-dialogs</artifactId>
            <type>war</type>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.hal</groupId>
            <artifactId>hal-gui</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jboss.hal</groupId>
            <artifactId>hal-resources</artifactId>
            <type>war</type>
            <scope>runtime</scope>
        </dependency>
    </dependencies>

    <build>
        <outputDirectory>war/WEB-INF/classes</outputDirectory>

        <plugins>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>war</directory>
                            <includes>
                                <include>**/*</include>
                            </includes>
                        </fileset>
                        <fileset>
                            <directory>gwt-unitCache</directory>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <webappDirectory>war</webappDirectory>
                    <warSourceDirectory>war</warSourceDirectory>
                    <overlays>
                        <overlay>
                            <groupId>org.jboss.hal</groupId>
                            <artifactId>hal-dialogs</artifactId>
                            <excludes>
                                <exclude>WEB-INF/web.xml</exclude>
                            </excludes>
                        </overlay>
                        <overlay>
                            <groupId>org.jboss.hal</groupId>
                            <artifactId>hal-resources</artifactId>
                            <excludes>
                                <exclude>WEB-INF/web.xml</exclude>
                            </excludes>
                        </overlay>
                    </overlays>
                </configuration>
                <executions>
                    <!-- Copy the web app resources before package kicks in -->
                    <execution>
                        <id>overlay-web-resources</id>
                        <goals>
                            <goal>exploded</goal>
                        </goals>
                        <phase>generate-resources</phase>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>gwt-maven-plugin</artifactId>
                <configuration>
                    <inplace>true</inplace>
                    <logLevel>INFO</logLevel>
                    <module>${gwt.module}</module>
                    <localWorkers>4</localWorkers>
                    <failOnError>true</failOnError>
                    <runTarget>index.html</runTarget>
                    <warSourceDirectory>war</warSourceDirectory>
                    <disableCastChecking>true</disableCastChecking>
                    <disableClassMetadata>true</disableClassMetadata>
                    <enableClosureCompiler>true</enableClosureCompiler>
                    <gwtSdkFirstInClasspath>true</gwtSdkFirstInClasspath>
                    <!-- do not insert line breaks in this string; it breaks Windows compatibility -->
                    <extraJvmArgs>-Xmx1g -Xms756m -XX:MaxPermSize=256m -XX:CompileThreshold=1000</extraJvmArgs>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <classesDirectory>war</classesDirectory>
                    <excludes>
                        <exclude>META-INF/**</exclude>
                        <exclude>WEB-INF/**</exclude>
                    </excludes>
                    <classifier>resources</classifier>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <!-- TODO Include extensions -->
    <profiles>
        <profile>
            <id>eap</id>
            <properties>
                <gwt.module>org.jboss.hal.app.EAP</gwt.module>
            </properties>
        </profile>
        <profile>
            <id>wildfly-full</id>
            <properties>
                <gwt.module>org.jboss.hal.app.WildFlyFull</gwt.module>
            </properties>
        </profile>
    </profiles>
</project>
